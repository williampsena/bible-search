{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "skipLibCheck": true,
    "lib": ["es2016", "es2017.object"],
    "paths": {
      "@/*": ["./src/*"],
      "__tests__/*": ["./__tests__/*"],
      "__mocks__/*": ["./__mocks__/*"]
    }
  },
  "exclude": ["node_modules"]
}
